{% if testmode %}
  <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ text_testmode }}</div>
{% endif %}
<form action="{{ action }}" method="post">
  <input type="hidden" name="cmd" value="_cart" />
  <input type="hidden" name="upload" value="1" />
  <input type="hidden" name="business" value="{{ business }}" />

  {% if discount_amount_cart %}
    <input type="hidden" name="discount_amount_cart" value="{{ discount_amount_cart }}" />
  {% endif %}
  <input type="hidden" name="clientAccnum" value="{{ clientAccnum }}" />
  <input type="hidden" name="clientSubacc" value="{{ clientSubacc }}" />
    <input type="hidden" name="formName" value="{{ formName }}" />

  {% if is_flexform == 'yes' %}
    <input type="hidden" name="initialPrice" value="{{ initialPrice }}" />
    <input type="hidden" name="initialPeriod" value="{{ initialPeriod }}" />
  {% else %}
    <input type="hidden" name="formPrice" value="{{ formPrice }}" />
    <input type="hidden" name="formPeriod" value="{{ formPeriod }}" />
  {% endif %}

  <input type="hidden" name="currencyCode" value="{{ currencyCode }}" />
  <input type="hidden" name="formDigest" value="{{ formDigest }}" />
  <input type="hidden" name="customer_fname" value="{{ customer_fname }}" />
  <input type="hidden" name="customer_lname" value="{{ customer_lname }}" />
  <input type="hidden" name="address1" value="{{ address1 }}" />
  <input type="hidden" name="address2" value="{{ address2 }}" />
  <input type="hidden" name="city" value="{{ city }}" />
  <input type="hidden" name="state" value="{{ state }}" />
  <input type="hidden" name="zipcode" value="{{ zipcode }}" />
  <input type="hidden" name="country" value="{{ country }}" />
  <input type="hidden" name="email" value="{{ email }}" />
  <input type="hidden" name="zc_orderid" value="{{ zc_orderid }}" />
  <div class="buttons">
    <div class="pull-right">
      <input type="submit" value="{{ button_confirm }}" class="btn btn-primary" />
    </div>
  </div>
</form>
